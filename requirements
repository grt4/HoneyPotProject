#!/bin/bash
echo -------------------------------------------------------------------
echo ‎‎‎‎‎‎‎‎‎‎'                       'UPDATING PACKAGES
echo -------------------------------------------------------------------
apt-get update
echo -------------------------------------------------------------------
echo ‎‎‎‎'                      'INSTALLING PYTHON3
echo -------------------------------------------------------------------
apt-get --assume-yes install python3
echo -------------------------------------------------------------------
echo ‎‎‎‎'                         'INSTALLING PIP
echo -------------------------------------------------------------------
apt-get --assume-yes install python3-pip
echo -------------------------------------------------------------------
echo ‎‎‎‎'                       'INSTALLING APACHE
echo -------------------------------------------------------------------
apt-get --assume-yes install apache2
echo -------------------------------------------------------------------
echo ‎‎‎‎'                        'INSTALLING NFS
echo -------------------------------------------------------------------
apt-get --assume-yes install nfs-kernel-server
echo -------------------------------------------------------------------
echo ‎‎‎‎'                        'INSTALLING MYSQL
echo -------------------------------------------------------------------
apt-get --assume-yes install mysql-server
echo -------------------------------------------------------------------
echo ‎‎‎‎'                        'INSTALLING SSH
echo -------------------------------------------------------------------
apt-get --assume-yes install openssh-server
